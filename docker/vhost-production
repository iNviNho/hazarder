<VirtualHost *:443>
    ServerAdmin webmaster@localhost
    DocumentRoot /var/www/html

    SSLEngine on
    SSLCertificateFile /etc/ssl/private/cert2.pem
    SSLCertificateKeyFile /etc/ssl/private/privkey2.pem

    <Directory "/var/www/html">
        Options FollowSymLinks
        AllowOverride all
    </Directory>
</VirtualHost>